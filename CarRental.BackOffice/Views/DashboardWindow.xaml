<Window x:Class="CarRental.BackOffice.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:CarRental.BackOffice.ViewModels"
        Title="Dashboard - Car Rental System" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <viewModels:DashboardViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#007ACC" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" 
                          Text="🚗" 
                          FontSize="28" 
                          VerticalAlignment="Center"/>
                
                <TextBlock Grid.Column="1" 
                          Text="Car Rental Management System" 
                          Foreground="White" 
                          FontSize="20" 
                          FontWeight="Bold"
                          VerticalAlignment="Center"
                          Margin="10 0 0 0"/>
                
                <Button Grid.Column="2" 
                       Content="Logout" 
                       Command="{Binding LogoutCommand}"
                       CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                       Background="Transparent"
                       BorderBrush="White"
                       Foreground="White"/>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Sidebar -->
            <Border Grid.Column="0" Background="#F8F9FA" BorderBrush="#E9ECEF" BorderThickness="0 0 1 0">
                <StackPanel Margin="20">
                    <TextBlock Text="{Binding WelcomeMessage}" 
                              FontWeight="Bold" 
                              Margin="0 0 0 20"
                              TextWrapping="Wrap"/>
                    
                    <Button Content="👥 Manage Users" 
                           Command="{Binding ManageUsersCommand}"
                           Height="40"
                           Margin="0 5"/>
                    
                    <Button Content="🚗 Manage Vehicles" 
                           Command="{Binding ManageVehiclesCommand}"
                           Height="40"
                           Margin="0 5"/>
                    
                    <Button Content="📋 Manage Rentals" 
                           Command="{Binding ManageRentalsCommand}"
                           Height="40"
                           Margin="0 5"/>
                    
                    <Button Content="💰 Manage Payments" 
                           Command="{Binding ManagePaymentsCommand}"
                           Height="40"
                           Margin="0 5"/>
                </StackPanel>
            </Border>
            
            <!-- Dashboard Content -->
            <Border Grid.Column="1" Padding="30" Background="White">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                              Text="Dashboard Overview" 
                              FontSize="24" 
                              FontWeight="Bold"
                              Margin="0 0 0 20"/>
                    
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <WrapPanel>
                            <!-- Statistics Cards -->
                            <Border Width="200" Height="150" Background="#E3F2FD" Margin="10" 
                                   CornerRadius="10" BorderBrush="#BBDEFB" BorderThickness="1">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="📊" FontSize="32" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Total Rentals" HorizontalAlignment="Center" Margin="0 10 0 5"/>
                                    <TextBlock Text="125" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Width="200" Height="150" Background="#E8F5E9" Margin="10" 
                                   CornerRadius="10" BorderBrush="#C8E6C9" BorderThickness="1">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="🚗" FontSize="32" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Available Vehicles" HorizontalAlignment="Center" Margin="0 10 0 5"/>
                                    <TextBlock Text="15" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Width="200" Height="150" Background="#FFF3E0" Margin="10" 
                                   CornerRadius="10" BorderBrush="#FFE0B2" BorderThickness="1">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="💰" FontSize="32" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Revenue" HorizontalAlignment="Center" Margin="0 10 0 5"/>
                                    <TextBlock Text="$12,580" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Width="200" Height="150" Background="#F3E5F5" Margin="10" 
                                   CornerRadius="10" BorderBrush="#E1BEE7" BorderThickness="1">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="👥" FontSize="32" HorizontalAlignment="Center"/>
                                    <TextBlock Text="Active Clients" HorizontalAlignment="Center" Margin="0 10 0 5"/>
                                    <TextBlock Text="48" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </WrapPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#F0F0F0" Padding="10">
            <TextBlock Text="Dashboard | Car Rental Management System" 
                      HorizontalAlignment="Center" 
                      Foreground="#666"/>
        </Border>
    </Grid>
</Window>