<Window x:Class="CarRental.BackOffice.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:viewModels="clr-namespace:CarRental.BackOffice.ViewModels"
        Title="Car Rental System - Login" 
        Height="400" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Window.DataContext>
        <viewModels:LoginViewModel/>
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#007ACC" Padding="20">
            <TextBlock Text="Car Rental Management System" 
                      Foreground="White" 
                      FontSize="24" 
                      FontWeight="Bold"
                      HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Login Form -->
        <Border Grid.Row="1" Padding="40" Background="White">
            <StackPanel>
                <TextBlock Text="Login" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          Margin="0 0 0 20"
                          Foreground="#007ACC"/>
                
                <TextBlock Text="Username" 
                          FontWeight="SemiBold"
                          Margin="0 10 0 5"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                        Height="35"/>
                
                <TextBlock Text="Password" 
                          FontWeight="SemiBold"
                          Margin="0 10 0 5"/>
                <PasswordBox x:Name="PasswordBox"
                            Height="35"
                            PasswordChanged="PasswordBox_PasswordChanged"/>
                
                <TextBlock Text="{Binding ErrorMessage}" 
                          Foreground="Red" 
                          Margin="0 10 0 0"
                          Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 0 0">
                    <Button Content="Exit" 
                           Command="{Binding ExitCommand}" 
                           CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                           Background="Gray"
                           Width="80"/>
                    <Button Content="Login" 
                           Command="{Binding LoginCommand}" 
                           CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                           Width="80"
                           Margin="10 0 0 0"/>
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#F0F0F0" Padding="10">
            <TextBlock Text="© 2024 Car Rental Management System" 
                      HorizontalAlignment="Center" 
                      Foreground="#666"/>
        </Border>
    </Grid>
</Window>